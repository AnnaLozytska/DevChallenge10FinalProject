<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="devchallenge10.android.analogueclock.MainActivity">

    <devchallenge10.android.analogueclock.AnalogClockView
        android:id="@+id/clockView"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Available clock faces:" />

    <LinearLayout
        android:id="@+id/faceSkinsContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Available clock hour hands:" />

    <LinearLayout
        android:id="@+id/handSkinsContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" />
</LinearLayout>
